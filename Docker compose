services:
  app:
    build: .
    ports:
      - "5000:5000"
    environment:
      - NODE_ENV=production
      - MONGODB_URI=mongodb://mongo:27017/executive-ai
    depends_on:
      - mongo

  mongo:
    image: mongo:5
    volumes:
      - mongodb_data:/data/db

